<html>
   <head>
    <meta charset="UTF-8">
  </head>
   <body>
    <div class="container">
      <div class='game'>
        <h1>Games#score</h1>
        <p>Find me in app/views/games/score.html.erb</p>
        <ul class="list-inline">
          <% @grid.each do |letter| %>
          <li class="btn btn-primary"><%= letter%></li>
          <% end %>
        </ul>
        <form action="score" method='post'>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input class='mot' type="text" placeholder="Type your word here!">
          <button type='submit' class='button btn-primary'>Submit</button>
        </form>
      </div>
    </div>
  </body>
 </html>



